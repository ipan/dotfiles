[core]
    editor = $EDITOR
    quotepath = false

[log]
    date = local

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true

[alias]
    st = status
    co = checkout
    up = pull --rebase
    mlog = log --no-merges
    ls = log --name-only -- .
    sh = show --name-only
    cp = cherry-pick -x
    cpx = cherry-pick -x -X theirs
    cpm = cherry-pick -x -m 1

[push]
    default = simple

[pull]
    rebase = false
